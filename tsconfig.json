{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node", // Use "node" for bundler mode
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Bundler-specific options
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    // Linting options
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist", "out"]
}
